@model AutoParts.Models.Data.Order

@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Заказы</li>
        <li class="breadcrumb-item active">Редактирование</li>
    </ol>
</nav>

<a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
    <i class="fa fa-arrow-left"></i>
</a>

<h1>Редактирование</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdUser" class="control-label"></label>
                <input asp-for="IdUser" class="form-control" />
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSpare" class="control-label"></label>
                <input asp-for="IdSpare" class="form-control" />
                <span asp-validation-for="IdSpare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfReg" class="control-label"></label>
                <input asp-for="DateOfReg" class="form-control" />
                <span asp-validation-for="DateOfReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

